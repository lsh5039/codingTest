package codingTest02;

import java.util.Arrays;
import java.util.LinkedList;
import java.util.Queue;

public class Main2 {

	public static void main(String[] args) {
		int[] citations = {3, 0, 6, 1, 5};//return 3
		Main2 app = new Main2();
		int result = app.solution(citations);
		System.out.println("result :: "+result);
	}
	//1 9
	public int solution(int[] citations) {
		if(citations.length == 1) {
			return 1;
		}
		int answer = 0;
		Arrays.sort(citations);
		System.out.println("szie :: "+citations.length);
		Queue<Integer> que = new LinkedList<Integer>();
		for(int i=citations.length-1; i >= 0; i--) {//큰수부터
			que.offer(citations[i]);
		}
		int cnt = 0;//hIndex 셀 수
		int hIndex = 0;//hIndex
		while(!que.isEmpty()) {
				int num = que.poll();//이 수보다 같거나 큰수 몇개?
				for(int i =0; i<que.size(); i++) {
					int target = que.peek();//비교 인자
					if(num < target) {
						cnt++;
					}
					que.offer(que.poll());
					
				}
				if(hIndex < cnt) {
					hIndex = cnt;
				}
			
			cnt = 0;
		}
		
		
		
		
		
		return hIndex;
	}
}
